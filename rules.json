{
  "rules_version": "v2.4",
  "defaults": {
    "quoteMaxChars": 50,
    "marginsCM": 2.0,
    "headerBandFactor": 0.6,
    "footerBandFactor": 0.6,
    "centerWidthPT": 100,
    "schoolPatterns": [
      "(國立|市立|縣立)[\u4e00-\u9fa5]{0,8}(高級中學|高中|高職|高工|家商|商工|農工|高農|職業學校|中學|國中|小學|大學|科技大學|科大|師範大學|大學附中|實驗高中|高中部|學校)"
    ]
  },
  "rules": [
    {
      "id": "file.pages",
      "title": "頁數 4–10",
      "severity": "critical",
      "scope": ["pdf"],
      "type": "pages_range",
      "params": { "min": 4, "max": 10 }
    },
    {
      "id": "header.filename_in_header",
      "title": "每頁頁首需包含檔名",
      "severity": "critical",
      "scope": ["pdf"],
      "type": "header_contains_filename",
      "params": { "reportBodyHits": true }
    },
    {
      "id": "filename.title_consistency",
      "title": "檔案名稱 與 頁首篇名一致性",
      "severity": "critical",
      "scope": ["pdf"],
      "type": "filename_vs_header_title",
      "params": { "minTitleLen": 4 }
    },
    {
      "id": "footer.center_pagenum",
      "title": "每頁需有置中頁碼（底端帶）",
      "severity": "critical",
      "scope": ["pdf"],
      "type": "footer_center_pagenum"
    },
    {
      "id": "layout.margins",
      "title": "四周邊界 ≥ 2 公分（正文區推估）",
      "severity": "major",
      "scope": ["pdf"],
      "type": "margins_min_cm"
    },
    {
      "id": "privacy.no_school_or_name",
      "title": "不得含校名/姓名",
      "severity": "critical",
      "scope": ["both"],
      "type": "privacy_schoolname_regex"
    },
    {
      "id": "structure.sections_order",
      "title": "六大段落依序",
      "severity": "critical",
      "scope": ["both"],
      "type": "sections_order",
      "params": {
        "sections": ["前言","文獻探討","研究方法","研究分析與結果","研究結論與建議","參考文獻"]
      }
    },
    {
      "id": "references.citation_style",
      "title": "內文引註採 作者-年份",
      "severity": "major",
      "scope": ["both"],
      "type": "citation_style"
    },
    {
      "id": "quotes.limit",
      "title": "直接引文 ≤ 50 字（不含標點與空白）",
      "severity": "major",
      "scope": ["both"],
      "type": "quote_len_limit",
      "params": { "max": 50 }
    },
    {
      "id": "references.count",
      "title": "參考文獻 ≥ 3",
      "severity": "critical",
      "scope": ["both"],
      "type": "refs_min_count",
      "params": { "min": 3 }
    },
    {
      "id": "style.font",
      "title": "字體/字型規範",
      "severity": "major",
      "scope": ["both"],
      "type": "style_font_check",
      "params": {
        "zhFont": "新細明體",
        "enFont": "Times New Roman",
        "fontSizePT": 12,
        "color": "#000000"
      }
    },
    {
      "id": "layout.spacing",
      "title": "版面編排（單行間距 / 段首縮排）",
      "severity": "major",
      "scope": ["pdf"],
      "type": "layout_spacing_check",
      "params": { "marginCM": 2.0 }
    },
    {
      "id": "structure.headings",
      "title": "標題與次標題層次",
      "severity": "major",
      "scope": ["both"],
      "type": "headings_hierarchy_check"
    },
    {
      "id": "references.citation_required",
      "title": "引用原文需註明出處（≤50字）",
      "severity": "critical",
      "scope": ["both"],
      "type": "citation_required",
      "params": { "quoteMax": 50 }
    },
    {
      "id": "file.coverpage",
      "title": "不得有封面頁（4–10頁）",
      "severity": "critical",
      "scope": ["pdf"],
      "type": "coverpage_absent",
      "params": {
        "keywords": ["學校","高中","高級中學","大學","指導老師","班級","學生","學號","封面"]
      }
    },
    {
      "id": "figures.tables",
      "title": "圖表需有標號/標題與來源",
      "severity": "major",
      "scope": ["both"],
      "type": "figures_tables_check"
    },
    {
      "id": "references.consistency",
      "title": "參考文獻與內文引註一致性",
      "severity": "critical",
      "scope": ["both"],
      "type": "refs_consistency_check"
    },
    {
      "id": "external.duplicate_check",
      "title": "作品名稱是否已於校外發表/得獎（人工/GPT）",
      "severity": "minor",
      "scope": ["both"],
      "type": "manual_check"
    }
  ]
}
